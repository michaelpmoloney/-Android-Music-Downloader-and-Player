<?xml version="1.0" encoding="utf-8"?>

<!--
item_layout

Description: this xml layout is for the generated song list.
As the song data is retrieved from the mysql database it is
displayed as a list with the song title on the left and the
song duration in minutes and seconds on the right.
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/songTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="29dp"
        android:text="song"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/durationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/songTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="46dp"
        android:text="duration"
        android:textSize="18sp" />
</RelativeLayout>